{
  "manifest_version": 3,
  "name": "AST_Parsing",
  "version": "1.2", 
  "description": "利用抽象语法树 (AST) 对当前页面加载的 Js 进行深度静态分析",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/",
    "https://api.openai.com/",
    "https://api.deepseek.com/",
    "https://ark.cn-beijing.volces.com/"
  ],
  "declarative_net_request" : {
    "rule_resources" : [{ 
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}